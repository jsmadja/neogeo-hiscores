<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

    <diskStore path="java.io.tmpdir"/>

    <defaultCache maxElementsInMemory="10000" eternal="false"
                  timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="true"
                  statistics="true"/>

    <cache name="org.hibernate.cache.StandardQueryCache"
           maxElementsInMemory="100000" eternal="false" timeToIdleSeconds="120"
           timeToLiveSeconds="120" statistics="true"/>

    <cache name="org.hibernate.cache.UpdateTimestampsCache" maxElementsInMemory="10000" eternal="false"
           timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="false"
           statistics="true"/>

    <cache name="games" eternal="true" maxElementsInMemory="300"/>
    <cache name="scores" eternal="true" maxElementsInMemory="10000"/>

</ehcache>