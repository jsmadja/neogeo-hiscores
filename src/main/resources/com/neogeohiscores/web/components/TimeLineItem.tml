<div id="timeLineItem" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
    <div id="thumbnail">
        <t:if test="item.scoreItem">
            <a class="screen_thumbnail_right" href="#screen_thumb_right">
                <img width="100px" src="${item.avatarUrl}" alt=""/>
                <span>
                    <img src="${item.avatarUrl}" width="350px" alt=""/>
                </span>
            </a>
            <p:else>
                <img src="${item.pictureUrl}" width="100px" border="0"/>
            </p:else>
        </t:if>
    </div>
    <div id="player">
        <t:pageLink page="playerView" context="item.player">${item.playerName}</t:pageLink>
    </div>
    <div id="text">
        <t:if test="item.scoreItem">
            <t:pageLink page="AddScore" class="score" context="item.scoreValue">${item.score}</t:pageLink>
            (${item.rank}) sur
            <t:pageLink class="game" page="gameView" context="item.game">${item.game.name}</t:pageLink>
            (${item.level})
            <t:if test="item.scoreValue.nghPoints">
                <span class="label label-success">+${item.scoreValue.nghPoints} NGH points</span>
            </t:if>
        </t:if>
        <t:if test="item.unlockedTitleItem">
            a débloqué le titre ${item.titleName}
        </t:if>
        <t:if test="item.relockedTitle">
            a perdu le titre ${item.titleName} à cause du score de <span class="player">${item.relockerName}</span> sur
            <t:pageLink page="gameView" class="game" context="item.game">${item.game.name}</t:pageLink>
        </t:if>
    </div>
    <div id="comment">
        ${item.comment}
    </div>
    <div id="date">
        ${item.date}
    </div>
</div>
